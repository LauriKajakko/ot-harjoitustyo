<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import shiftplanner.*?>

<AnchorPane minHeight="400" minWidth="800.0" prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shiftplanner.EmployeeViewController">

    <HBox>
      <VBox maxHeight="395.0" maxWidth="228.0" minHeight="395.0" minWidth="228.0" prefHeight="395.0" prefWidth="228.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="View and manage">
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="19.0" />
               </font></Text>
            <Text text="Add Shifts">
               <VBox.margin>
                  <Insets left="20.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="15.0" />
               </font>
            </Text>
               <Label text="Select employee">
                   Select employee
                   <padding>
                       <Insets left="20.0" right="10.0" top="10.0" />
                   </padding>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               </Label>
               <ChoiceBox fx:id="choiceBox" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="130.0">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </ChoiceBox>

             <Text text="Date: ">
               <VBox.margin>
                  <Insets left="20.0" top="10.0" />
               </VBox.margin></Text>
            <DatePicker fx:id="datePicker" editable="false">
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor></DatePicker>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Starting time:">
               <VBox.margin>
                  <Insets left="20.0" top="30.0" />
               </VBox.margin>
            </Text>
            <TimeSpinner fx:id="fromSpinner" editable="true">
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin></TimeSpinner>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ending time:">
               <VBox.margin>
                  <Insets left="20.0" top="10.0" />
               </VBox.margin>
            </Text>
            <TimeSpinner fx:id="toSpinner">
               <padding>
                  <Insets left="20.0" />
               </padding></TimeSpinner>
            <Button fx:id="addButton" mnemonicParsing="false" text="Add">
               <VBox.margin>
                  <Insets left="20.0" top="5.0" />
               </VBox.margin>
            </Button>
         </children></VBox>
        <VBox minWidth="280">
            <padding>
                <Insets top="10.0" />
            </padding>
            <Label text="Shifts" />
            <ListView fx:id="shiftListView" prefHeight="370.0" prefWidth="260.0" VBox.vgrow="ALWAYS" />
        </VBox>
      <VBox prefHeight="395.0" prefWidth="290.0">
         <children>
               <ToggleButton fx:id="toggleButton" onAction="#handleToggle" text="show shift info" VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets left="20.0" top="30.0" />
               </VBox.margin>
            </ToggleButton>
               <Text fx:id="infoText">
               <VBox.margin>
                  <Insets left="30.0" top="10.0" />
               </VBox.margin></Text>
         </children>
      </VBox>
    </HBox>


</AnchorPane>
